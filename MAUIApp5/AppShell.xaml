<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIApp5.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIApp5.Foods"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <FlyoutItem
        FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Kare Kare"
            ContentTemplate="{DataTemplate local:KareKarePage}"
            Icon="meal.jpg"/>

        <ShellContent
            Title="Lasagna"
            ContentTemplate="{DataTemplate local:LasagnaPage}"
            Icon="pasta.png"/>

        <ShellContent
            Title="Mango Graham"
            ContentTemplate="{DataTemplate local:MangoGrahamPage}"
            Icon="dessert.jpg"/>  

    </FlyoutItem>
    
</Shell>
